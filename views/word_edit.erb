<h1>Update: <%= @word.name %></h1>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="edit_word">Edit Word</label>
  <input id="edit_word" name="edit_word" type="text">

  <button type="submit">Update Word</button>
</form>

<p><a href="/words">Return to word list</a></p>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Word</button>
</form>